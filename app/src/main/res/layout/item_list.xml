<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageLogoCoinItem"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:src="@drawable/ic_icon_bitcoin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textIdCoinItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="-1dp"
        android:fontFamily="@font/roboto_medium"
        android:includeFontPadding="false"
        android:text="BTC"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/textNameCoinItem"
        app:layout_constraintStart_toEndOf="@+id/imageLogoCoinItem" />

    <TextView
        android:id="@+id/textNameCoinItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/roboto_light"
        android:includeFontPadding="false"
        android:letterSpacing="0.03"
        android:text="Bitcoin"
        android:textColor="@color/strokeColor"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageLogoCoinItem"
        app:layout_constraintWidth_max="70dp" />

    <TextView
        android:id="@+id/textPriceCoinItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/roboto_medium"
        android:text="$62.000"
        android:textColor="@color/price"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imageAddToPortfolio"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imagePriceCoinItem"
        android:layout_width="12dp"
        android:layout_height="10dp"
        android:layout_marginStart="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageLogoCoinItem"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_icon_find" />

    <TextView
        android:id="@+id/textPercentCoinItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:fontFamily="@font/roboto_medium"
        android:text="1.33%"
        android:textColor="@color/percentPlus"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imagePriceCoinItem"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageAddToPortfolio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_icon_plus" />

</androidx.constraintlayout.widget.ConstraintLayout>